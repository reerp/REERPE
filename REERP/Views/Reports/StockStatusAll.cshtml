@model IEnumerable<REERP.Models.ReportModel.StockViewModel>

@{
    ViewBag.Title = "Stock Status";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
}

<link href="~/Content/katniss-template/css/jquery-ui.min.css" rel="stylesheet" />
@Styles.Render("~/Content/datatable")
@Scripts.Render("~/bundles/datatable")
<script src="/Content/katniss-template/js/jquery-ui.min.js"></script>





<table id="example" class="table table-striped table-bordered " style="width:100%">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.CategoryName)</th>
            <th>@Html.DisplayNameFor(model => model.ProductName)</th>
            <th>@Html.DisplayName("Unit")</th>
            <th>@Html.DisplayNameFor(model => model.UnitCost)</th>
            <th>@Html.DisplayName("Qty")</th>
            <th>@Html.DisplayNameFor(model => model.TotalCost)</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                <td>@Html.DisplayFor(modelItem => item.UnitOfMeasure)</td>
                <td>@Html.DisplayFor(modelItem => item.UnitCost)</td>
                <td>@Html.DisplayFor(modelItem => item.QuantityOnHand)</td>
                <td>@Html.DisplayFor(modelItem => item.TotalCost)</td>

            </tr>
        </tbody>
    }
 
</table>

