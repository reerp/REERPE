@model REERP.Models.Productc
@using REERP.Security;
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
    var user = (MyIdentityUser)HttpContext.Current.Session["USER_INFO"];
}

<div class="card pd-20 pd-sm-40">
    <h6 class="card-body-title">Edit Product</h6>
    <p></p>
    @using (Html.BeginForm("Edit", "Productcs", FormMethod.Post, new { id = "frm_edit_product", @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken();
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ProductcId)
        <div class="form-layout">
            <div class="row mg-b-25">
                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.ProductName, new { @class = "form-control-label" })
                        @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })
                    </div>
                </div><!--Col-4-->
                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.ProductDescription, new { @class = "form-control-label" })
                        @Html.TextBoxFor(m => m.ProductDescription, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ProductDescription, "", new { @class = "text-danger" })
                    </div>
                </div><!--Col-4-->
                <div class="col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Model, new { @class = "form-control-label" })
                        @Html.TextBoxFor(m => m.Model, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Model, "", new { @class = "text-danger" })
                    </div>
                </div><!--Col-4-->
                <div class="col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.UnitOfMeasure, new { @class = "form-control-label" })
                        @Html.TextBoxFor(m => m.UnitOfMeasure, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UnitOfMeasure, "", new { @class = "text-danger" })
                    </div>
                </div><!--Col-4-->
                <div class="col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.UnitCost, new { @class = "form-control-label" })
                        @Html.TextBoxFor(m => m.UnitCost, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UnitCost, "", new { @class = "text-danger" })
                    </div>
                </div><!--Col-4-->
                <div class="col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.UnitPrice, new { @class = "form-control-label" })
                        @Html.TextBoxFor(m => m.UnitPrice, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UnitPrice, "", new { @class = "text-danger" })
                    </div>
                </div><!--Col-4-->
                <div class="col-lg-8">
                    <div class="form-group">
                        @Html.LabelFor(model => model.CategoryId, "CategoryId", htmlAttributes: new { @class = "control-label col-md-4" })

                        @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-layout-footer">

                <button class="btn btn-default mg-r-5" onclick="javascript: document.getElementById('frm_edit_product').submit()" data-submittedform="frm_edit_product"><span class="fa fa-save"></span> Submit Form</button>

                <a class="btn btn-secondary" href="@Url.Action("Index", "Productcs")"><span class="fa fa-times-circle"></span> Cancel</a>

            </div><!-- form-layout-footer -->
        </div>
    }
    @ViewBag.Message
</div>