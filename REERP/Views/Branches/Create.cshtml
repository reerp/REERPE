@model REERP.Models.Branch
@using REERP.Security;
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
    var user = (MyIdentityUser)HttpContext.Current.Session["USER_INFO"];
}

<div class="card pd-20 pd-sm-40">
    <h6 class="card-body-title">Add Branch</h6>
    <p></p>
    @* @using (Html.BeginForm())*@
    @using (Html.BeginForm("Create", "Branches", FormMethod.Post, new { id = "frm_create_branch", @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-layout">
            <div class="row mg-b-25">
                <div class="col-lg-8">
                    <div class="form-group">
                        @Html.LabelFor(m => m.BranchName, new { @class = "form-control-label" })
                        @Html.TextBoxFor(m => m.BranchName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.BranchName, "", new { @class = "text-danger" })
                    </div>
                </div><!--Col-8-->
                <div class="col-lg-8">
                    <div class="form-group">
                        @Html.LabelFor(m => m.BranchLocation, new { @class = "form-control-label" })
                        @Html.TextBoxFor(m => m.BranchLocation, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.BranchLocation, "", new { @class = "text-danger" })
                    </div>
                </div><!--Col-8-->
                <div class="col-lg-8">
                    <div class="form-group">
                        @Html.LabelFor(m => m.BranchDescription, new { @class = "form-control-label" })
                        @Html.TextBoxFor(m => m.BranchDescription, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.BranchDescription, "", new { @class = "text-danger" })
                    </div>
                </div><!--Col-8-->
            </div><!--mg-b-25-->
            <div class="form-layout-footer">


                <button class="btn btn-default mg-r-5" onclick="javascript: document.getElementById('frm_create_branch').submit()" data-submittedform="frm_create_branch"><span class="fa fa-save"></span> Submit Form</button>

                <a class="btn btn-secondary" href="@Url.Action("Index", "Branches")"><span class="fa fa-times-circle"></span> Cancel</a>


            </div><!--form-layout-footer-->

        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
