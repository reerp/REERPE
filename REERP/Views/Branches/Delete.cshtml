@model REERP.Models.Branch
@using REERP.Security;
@{
    ViewBag.Title = "Delete Branch";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
    var user = (MyIdentityUser)HttpContext.Current.Session["USER_INFO"];
}

<h2>Delete Branch</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <div class="form-layout">
        <div class="row mg-b-25">
            <div class="col-lg-8">
                <div class="form-group">
                    @Html.LabelFor(m => m.BranchName, new { @class = "form-control-label" })
                    @Html.TextBoxFor(m => m.BranchName, new { @class = "form-control", @readonly = "readonly" })
                    @Html.ValidationMessageFor(m => m.BranchName, "", new { @class = "text-danger" })
                </div>
            </div><!--Col-8-->
            <div class="col-lg-8">
                <div class="form-group">
                    @Html.LabelFor(m => m.BranchLocation, new { @class = "form-control-label" })
                    @Html.TextBoxFor(m => m.BranchLocation, new { @class = "form-control", @readonly = "readonly" })
                    @Html.ValidationMessageFor(m => m.BranchLocation, "", new { @class = "text-danger" })
                </div>
            </div><!--Col-8-->
            <div class="col-lg-8">
                <div class="form-group">
                    @Html.LabelFor(m => m.BranchDescription, new { @class = "form-control-label" })
                    @Html.TextBoxFor(m => m.BranchDescription, new { @class = "form-control", @readonly = "readonly" })
                    @Html.ValidationMessageFor(m => m.BranchDescription, "", new { @class = "text-danger" })
                </div>
            </div><!--Col-8-->
        </div><!--mg-b-25-->
       <!--form-layout-footer-->
    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-layout-footer">
            <input type="submit" value="Delete" class="btn btn-default mg-r-5" />
            <a class="btn btn-secondary" href="@Url.Action("Index", "Branches")"><span class="fa fa-times-circle"></span> Cancel</a>
        </div>
    }
</div>
