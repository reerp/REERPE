@model REERP.Models.Login
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="signpanel-wrapper">
    <div class="signbox">
        <div class="signbox-header">
            <h4>RUNGO</h4>
            <p class="mg-b-0">REERP Stock System</p>
        </div><!-- signbox-header -->
        <div class="signbox-body">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @id = "login-form"}))
        {
            @Html.AntiForgeryToken();
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="form-control-label">User Name:</label>
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Enter your user name", @required = "required", @id = "login-username" })
                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
            </div><!-- form-group -->
            <div class="form-group">
                <label class="form-control-label">Password:</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Enter your password", @required = "required", @id = "login-password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div><!-- form-group -->
            <button class="btn btn-dark btn-block" type="submit">Sign In</button>
            <div class="tx-center bd pd-10 mg-t-40">Not yet a member?<a href="@Url.Action("Register","Account")">Create an account</a>
            </div>
        }
            
         
           
        </div><!-- signbox-body -->
    </div><!-- signbox -->
</div><!-- signpanel-wrapper -->


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

    