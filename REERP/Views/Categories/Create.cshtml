@model REERP.Models.Category
@using REERP.Security;
@{
    ViewBag.Title = "Add new category";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
    var user = (MyIdentityUser)HttpContext.Current.Session["USER_INFO"];
}

<div class="card pd-20 pd-sm-40">
@*    <h6 class="card-body-title">Add Category</h6>*@
    <p></p>

             
    @using (Html.BeginForm("Create", "Categories", FormMethod.Post, new { id = "frm_create_category", @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken();
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-layout">
            <div class="row mg-b-25">
                <div class="col-lg-8">
                    <div class="form-group">
                        @Html.LabelFor(m => m.CategoryName, new { @class = "form-control-label" })

                        @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })

                    </div>
                </div><!--Col-6-->
                <div class="col-lg-8">
                    <div class="form-group">
                        @Html.LabelFor(m => m.CategoryDescription, new { @class = "form-control-label" })

                        @Html.TextBoxFor(m => m.CategoryDescription, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CategoryDescription, "", new { @class = "text-danger" })

                    </div>
                </div><!--Col-6-->
            </div>
            <div class="form-layout-footer">
                      
                <button class="btn btn-default mg-r-5" onclick="javascript: document.getElementById('frm_create_category').submit()" data-submittedform="frm_create_category"><span class="fa fa-save"></span> Submit Form</button>

                <a class="btn btn-secondary" href="@Url.Action("Index", "Categories")"><span class="fa fa-times-circle"></span> Cancel</a>

            </div><!-- form-layout-footer -->
        </div>
    }
    @ViewBag.Message
        


</div>