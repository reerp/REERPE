@model REERP.Models.Category
@using REERP.Security;
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
    var user = (MyIdentityUser)HttpContext.Current.Session["USER_INFO"];
}

<div class="card pd-20 pd-sm-40">
    <h6 class="card-body-title">Edit Category</h6>
    <p></p>
       
    @using (Html.BeginForm("Edit", "Categories", FormMethod.Post, new { id = "frm_edit_category", @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken();
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CategoryId)
        <div class="form-layout">
            <div class="row mg-b-25">
                <div class="col-lg-8">
                    <div class="form-group">
                        @Html.LabelFor(m => m.CategoryName, new { @class = "form-control-label" })
                        @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                    </div>
                </div><!-- col-6 -->
                <div class="col-lg-8">
                    <div class="form-group">
                        @Html.LabelFor(m => m.CategoryDescription, new { @class = "form-control-label" })

                        @Html.TextBoxFor(m => m.CategoryDescription, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CategoryDescription, "", new { @class = "text-danger" })
                    </div>
                </div><!-- col-6 -->

            </div><!-- row -->
            <div class="form-layout-footer">
                @*<a class="btn green btn-sm" data-buttontype="btn_save" onclick="javascript: document.getElementById('frm_create_customer').submit()" data-submittedform="frm_create_customer"><span class="fa fa-save"></span> Save</a>*@

                <button class="btn btn-default mg-r-5" onclick="javascript: document.getElementById('frm_edit_customer').submit()" data-submittedform="frm_edit_customer"><span class="fa fa-save"></span> Submit Form</button>

                <a class="btn btn-secondary" href="@Url.Action("Index", "Customers")"><span class="fa fa-times-circle"></span> Cancel</a>

            </div><!-- form-layout-footer -->
        </div><!-- form-layout -->
    }
    @ViewBag.Message

</div>